@import "variable/*"
@import 'axis'
@import 'jeet'
@import 'rupture'

border-box-html()
fluid-media()
rupture.scale = 0 400px 600px 780px 960px 1300px
rupture.scale-names = 'xs' 'sm' 'm' 'l' 'xl' 'hd'
jeet.gutter = 1

wraper
	center(1200px)
	padding 20px

header
	height 100px
	background #eee
	margin-bottom 20px
	stack()

slider
	height 200px
	background #eee
	stack()

.main-news
	cf()
.main-news-items
	padding 20px 0
	col(1/4)
	+below(m)
		col(1/2,cycle:2)

.main-news-items-img
	width 100%
	height 200px
	background #eee
	
.main-news-items-title 
	font-size 20px
	font-weight 600
	text-transform uppercase
	margin 10px 0
	
.main-news-items-text 
	font-size 10px

.short-news
	stack()
	

.short-news-left
	col(2/3)
	+below(m)
		col(1/2)
	
.short-news-left-items
	display flex
	justify-content center
	height 100px
	flex-flow column 
	border-radius 3px
	border 1px solid #eee 
	padding 10px
	margin-bottom 20px 

.short-news-left-items-title 
	font-size 20px
	font-weight 600
	
.short-news-left-items-text  
	color grey
	font-size 10px
	
.short-news-right
	col(1/3)
	+below(m)
		col(1/2)
		ьп	font-size 10px
	