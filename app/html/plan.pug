//service
.section.section--calc
	.main-cont
		.section-title Выберите площадь дома
		.section-title-sub Подача в Росреестр – плюс 3 000 руб. к стоимости работ.
		.calc
			input(type="range" placeholder=""  class="calc-range")
			.calc-range__wrap
